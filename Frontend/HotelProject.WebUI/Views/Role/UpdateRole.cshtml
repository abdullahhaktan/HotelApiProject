@model HotelProject.WebUI.Models.Role.UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rol Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="RoleID" />
    <br />
    <label>Rol Adı</label>
    <input type="type" asp-for="RoleName" placeholder="Rol Adı"/>

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>