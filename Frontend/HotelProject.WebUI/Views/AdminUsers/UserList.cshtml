@model List<ResultAppUserListDto>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card-body">
        <div class="active-member">
            <div class="table-responsive">
                <table class="table table-xs mb-0">
                    <thead>
                        <tr>
                            <th>Kullanıcı</th>
                            <th>Şehirr</th>
                            <th>Ülke</th>
                            <th>Durum</th>
                            <th>Cinsiyet</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="">@item.Name @item.Surname</td>
                                <td>@item.City</td>
                                <td>
                                    <span>@item.Country</span>
                                </td>
                                <td>
                                    <div>
                                        <div class="progress" style="height: 6px">
                                            @if(item.Gender.ToLower()=="erkek")
                                            {
                                                <div class="progress-bar bg-success" style="width: 90%"></div>
                                            }
                                            @if (item.Gender.ToLower() == "kız")
                                            {
                                                <div class="progress-bar bg-success" style="width: 90%"></div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                @if(item.Gender=="Erkek")
                                {
                                    <td><i class="fa fa-circle-o text-success  mr-2"></i> Erkek </td>
                                }
                                @if(item.Gender.ToLower()=="kadın" || item.Gender.ToLower()=="kız")
                                {
                                    <td><i class="fa fa-circle-o text-warning  mr-2"></i> Kız </td>
                                }
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Register/Index/" class="btn btn-primary">Yeni Kullanıcı Kaydı</a>