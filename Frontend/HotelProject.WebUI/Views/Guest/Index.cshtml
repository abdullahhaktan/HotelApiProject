@model List<ResultGuestDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>Fdfdsaf
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td> <a class="btn mb-1 btn-rounded btn-outline-danger" href="/Guest/DeleteGuest/@item.GuestId/">Sil</a></td>
            <td> <a class="btn mb-1 btn-rounded btn-outline-warning" href="/Guest/UpdateGuest/@item.GuestId/">Güncelle</a></td>
        </tr>
    }
</table>
