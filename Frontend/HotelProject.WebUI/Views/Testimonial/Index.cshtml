@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Başlık</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Title</td>
            <td>@item.Image</td>
            <td> <a class="btn mb-1 btn-rounded btn-outline-danger" href="/Testimonial/DeleteTestimonial/@item.TestimonialId/">Sil</a></td>
            <td> <a class="btn mb-1 btn-rounded btn-outline-warning" href="/Testimonial/UpdateTestimonial/@item.TestimonialId/">Güncelle</a></td>
        </tr>
    }
</table>

<a class="btn mb-1 btn-rounded btn-outline-success" href="/Testimonial/AddTestimonial/">Yeni referans girişi</a>