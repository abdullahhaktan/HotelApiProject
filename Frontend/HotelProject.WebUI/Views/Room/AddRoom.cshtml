@model AddRoomViewModel

@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">

    <label>Oda numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control"  />
    <br />
    <label>Oda Başlığı</label>
    <input type="text" class="form-control" asp-for="Title" />
    <br />
    <label>Resim</label>
    <input type="text" asp-for="RoomCoverageImage" class="form-control" />
    <br />
    <label>Yatak Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control" />
    <br />
    <label>Banyo Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <br />
    <label>Wifi</label>
    <input type="text" asp-for="Wifi" class="form-control" />
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <button type="submit" class="btn mb-1 btn-outline-primary">Kaydet</button>

</form>